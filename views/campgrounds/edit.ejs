<% include ../partials/header %>


<!-- <div class="container"> -->
	<div class="row">
		<h1>Edit <%=campground.name %></h1>
		<div id="forma">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post" accept-charset="utf-8">
					<div class="form-group">
						<input class="form-control" type="text" placeholder="name" name="campground[name]" value="<%=campground.name %>">
					</div>
					<div class="form-group">
						<input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01" max="1000">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="campground[image]"placeholder="url"
						value="<%=campground.image %>">
					</div>
					<div class="form-group">
						<!-- <input class="form-control" type="textarea" name="description" value="" placeholder="description"> -->
						<textarea class="form-control" name="campground[description]" placeholder="Description" cols="5" rows="3"><%=campground.description %></textarea>
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
					</div>
				</form>
				<a href="/campgrounds" >Go back</a>
			</div>
	</div>
<!-- </div> -->

<% include ../partials/footer %>