<% include ../partials/header %>


<!-- <div class="container"> -->
	<div class="row">
		<h1>Create a New Campground</h1>
		<div id="forma">
			<form action="/campgrounds" method="post" accept-charset="utf-8">
					<div class="form-group">
						<input class="form-control" type="text" placeholder="name" name="name">
					</div>
					<div class="form-group">
						<input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01" max="1000">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="image" value="" placeholder="url">
					</div>
					<div class="form-group">
						<!-- <input class="form-control" type="textarea" name="description" value="" placeholder="description"> -->
						<textarea class="form-control" name="description" placeholder="Description" cols="5" rows="3"></textarea>
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
					</div>
				</form>
				<a href="/campgrounds" >Go back</a>
			</div>
	</div>
<!-- </div> -->

